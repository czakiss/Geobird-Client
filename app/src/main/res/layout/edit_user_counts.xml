<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editUsers.EditUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit user datas"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="87dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nickname"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_users"
                android:layout_width="303dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="8dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxHeight="48dp"
                android:text="Edit nickname"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxHeight="48dp"
                android:text="Name"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nick_new_password"
                android:layout_width="87dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/nick_new_password"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nick_new_password_input"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:scrollbarSize="16sp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nick_new_password_repeat"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:scrollbarSize="16sp"
                android:text="Nick new password repeat"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nic_new_password_repeat_input"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:scrollbarSize="16sp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nick_change_email"
                android:layout_width="154dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Change e-mail" />

            <EditText
                android:id="@+id/nick_change_email_input"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <Button
            android:id="@+id/save_changes_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Save" />

        <Button
            android:id="@+id/delete_user_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Delete user" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>