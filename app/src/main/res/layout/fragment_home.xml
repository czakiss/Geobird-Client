<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lama_in_my_livingroom"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/lama" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/instructionButton"
                        android:layout_width="680px"
                        android:layout_height="680px"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:scrollbarDefaultDelayBeforeFade="400"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:rippleColor="#00FFFFFF" />

                    <Button
                        android:id="@+id/informations_button_2"
                        android:layout_width="680px"
                        android:layout_height="680px"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:scrollbarDefaultDelayBeforeFade="100"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:rippleColor="#00FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/informationsbutton"
                        android:layout_width="680px"
                        android:layout_height="680px"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:scrollbarDefaultDelayBeforeFade="100"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:rippleColor="#00FFFFFF"
                        app:shapeAppearance="@style/Animation.Design.BottomSheetDialog" />

                    <Button
                        android:id="@+id/galleryButton"
                        android:layout_width="680px"
                        android:layout_height="680px"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:scrollbarDefaultDelayBeforeFade="100"
                        android:text="Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:rippleColor="#00FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/your_account_button"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:foreground="@drawable/twoje_konto"
                android:gravity="center"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>